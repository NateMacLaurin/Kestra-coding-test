@model Kestra_coding_test.Models.FormData

<div class="row mt-2">
    <div class="col-lg-4">
        <form method="post" asp-controller="FormData" asp-action="Create">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                
                <label asp-for="Location">Location</label>
                @Html.DropDownList("Dropdown", ViewBag.Dropdown, "Select a Value", new { @for = "Location", @class = "form-control" })
            </div>
            <input type="submit" class="btn btn-primary mt-4" value="Create" />
        </form>
    </div>
</div>