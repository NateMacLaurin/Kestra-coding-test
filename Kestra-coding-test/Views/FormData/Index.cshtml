@model IEnumerable<Kestra_coding_test.Models.FormData>


<div class="container">
    <div class="d-flex row pt-4">
        <div class="col-6">
            <h2 class="text-primary">FormData - Data</h2>
        </div>
        <div class="col-6 align-content-end flex-wrap">
            <a class="nav-link text-primary" asp-controller="FormData" asp-action="FormDropdownOptions">Form Dropdown Options</a>
        </div>

    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Location
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="33%">@obj.FirstName</td>
                    <td width="33%">@obj.LastName</td>
                    <td width="33%">@obj.Location</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-primary">No FormData Exists!</p>
    }
</div>